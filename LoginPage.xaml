<Page x:Class=  "抽号器.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      
      Title="">
    <Grid Background="White" Height="450" Width="800">
        <StackPanel x:Name="SettingContent" HorizontalAlignment="Center" VerticalAlignment="Center"></StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="230">
            <TextBlock Text="28届5班专用抽号器" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>
            <TextBlock Text="请输入密码：" 
                      FontSize="14" 
                      Margin="0,0,0,10"/>
            <PasswordBox x:Name="passwordBox" 
                        Width="200" 
                        Height="30"
                        PasswordChar="*"/>
            <Button x:Name="loginButton" 
                   Content="确定" 
                   RenderTransformOrigin="0.5,0.477"
                   Click="loginButton_Click"
                   Height="29" Width="80"
                   />
            <Button Content="忘记密码" Height="30" Width="80" Click="ForgetButton_Click"/>
        </StackPanel>
        <Frame x:Name="SettingFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden" Grid.RowSpan="10"/>
        <Button x:Name="back" Content="⬅返回" BorderThickness="0" Background="Transparent" Click="back_Click" Margin="10,10,720,410"/>
    </Grid>
</Page>