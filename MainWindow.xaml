<Window x:Class="抽号器.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:抽号器"
        mc:Ignorable="d"
        Title="28届5班专用抽号器" Height="450" Width="800"
        ResizeMode="CanMinimize">
    <Grid>
        <TextBlock Text="28届5班专用抽号器" 
    FontSize="27" 
    FontWeight="Bold" 
    Margin="266,34,282,335" 
              />
        <TextBox x:Name="minNUM" HorizontalAlignment="Left" Height="35" Margin="260,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="335" TextChanged="RealTimeTextBox_TextChanged"/>
        <TextBox x:Name="maxNUM" HorizontalAlignment="Left" Height="35" Margin="260,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="335" TextChanged="RealTimeTextBox_TextChanged"/>
        <Button Content="开始抽取" HorizontalAlignment="Left" Height="100" Margin="175,285,0,0" VerticalAlignment="Top" Width="85" Click="Button_Click"/>
        <TextBox x:Name="output" IsReadOnly="True"  HorizontalAlignment="Left" Height="100" Margin="260,285,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="265" TextAlignment="Center" FontSize="50"/>
        <Label Content="最小值(min):" HorizontalAlignment="Left" Height="35" Margin="177,105,0,0" VerticalAlignment="Top" Width="83"/>
        <Label Content="最大值(max):" HorizontalAlignment="Left" Height="35" Margin="177,145,0,0" VerticalAlignment="Top" Width="83"/>
        <Button Content="设置" HorizontalAlignment="Left" Height="50" Margin="525,335,0,0" VerticalAlignment="Top" Width="70" Click="Opensetting_Click"/>
        <Button Content="github开源" HorizontalAlignment="Left" Height="50" Margin="525,285,0,0" VerticalAlignment="Top" Width="70" Click="Githubopen_Click"/>
        <StackPanel x:Name="MainContent" HorizontalAlignment="Center" VerticalAlignment="Center"></StackPanel>
        <Frame x:Name="MainFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden" Grid.RowSpan="10"/>
        

    </Grid>
</Window>
